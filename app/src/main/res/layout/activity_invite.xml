<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallll"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_title"
       android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"

        android:background="@drawable/rounded_corner"
        android:divider="?attr/colorPrimary"
        android:dividerHeight="0.1dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/relativeLayout2">

        <!--
            <TextView
                android:paddingTop="150dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Your invitation has sent successfully.You Will be notified if \n                                      Accepted/Rejected "
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"

                android:textSize="13dp"
                android:id="@+id/status"
                android:autoText="true"
                android:freezesText="false"
                android:maxLines="2" />
        -->


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/invitationone"

            android:id="@+id/imgmm"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



        <TextView
            android:text="You are invited by"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:layout_below="@+id/imgmm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text11"
            android:layout_above="@+id/text2"

            />

        <TextView
            android:text="name"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:layout_toRightOf="@+id/text11"
            android:layout_below="@+id/imgmm"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name1"/>

        <TextView
            android:text="Mobile"
            android:layout_below="@id/name1"
            android:layout_alignStart="@+id/name1"
            android:paddingLeft="7dp"
            android:paddingTop="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mob2"
            android:layout_alignLeft="@+id/name1" />


        <Button
            android:text="REJECT"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton"
            android:textColor="#FFFFFF"
            android:id="@+id/reject"
            style="@android:style/Widget.Button"

            android:layout_alignBaseline="@+id/accept"
            android:layout_alignBottom="@+id/accept"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_call_black_24dp"
            android:paddingTop="15dp"
            android:id="@+id/call_button"
            android:layout_below="@+id/text11"
            android:layout_toLeftOf="@+id/mob2"
            android:layout_toStartOf="@+id/mob2"
            android:layout_marginTop="12dp" />

        <Button
            android:text="ACCEPT"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbutton"
            android:textColor="#FFFFFF"
            android:id="@+id/accept"
            style="@android:style/Widget.Button"
            android:layout_below="@+id/call_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="16dp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
      android:src="@drawable/heartrec"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/imageView13"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/heartrec"
        android:id="@+id/imageView12"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"

        android:id="@+id/imageView8"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>