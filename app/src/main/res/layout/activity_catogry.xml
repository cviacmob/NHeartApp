<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F9">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ima1"
                android:layout_alignEnd="@+id/delete"
                android:layout_alignRight="@+id/delete"
                android:layout_centerInParent="true"
                android:text="pric"
                android:textColor="#080200"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/items"
                android:layout_width="20dp"
                android:layout_height="20dp"

                android:layout_alignBottom="@+id/ima1"
                android:layout_centerVertical="true"


                android:layout_toRightOf="@+id/remove"
                android:paddingLeft="5dp"
                android:text="2" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/ima1"
                android:layout_toRightOf="@+id/ima1"
                android:layout_toLeftOf="@+id/delete"
                android:background="#ffffff"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="#080200"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/ima1"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_close_grey600_24dp" />

            <ImageView

                android:id="@+id/ima1"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:paddingTop="2dp"
                app:srcCompat="@mipmap/feight" />

            <ImageButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ima1"
                android:layout_toEndOf="@+id/items"
                android:layout_toRightOf="@+id/items"
                android:background="@drawable/ic_plus_circle_outline_grey600_24dp" />

            <ImageButton
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/items"
                android:layout_toEndOf="@+id/ima1"
                android:layout_toRightOf="@+id/ima1"
                android:background="@drawable/ic_minus_circle_outline_grey600_24dp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
