<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9F9">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
        android:text="pric"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ima1"
        android:layout_alignRight="@+id/delete"
        android:layout_alignEnd="@+id/delete"
        android:id="@+id/price"
            android:textColor="#080200"
        android:textStyle="bold"
            android:layout_centerInParent="true" />

        <TextView
            android:text="2"
            android:id="@+id/items"
            android:layout_width="20dp"

            android:layout_alignBottom="@+id/ima1"
            android:layout_height="20dp"

            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/remove"
            android:paddingLeft="5dp"
            android:layout_toEndOf="@id/remove"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#080200"
            android:textStyle="bold"
            android:maxLines="2"
            android:paddingTop="3dp"
            android:gravity="center_vertical"


            android:layout_toRightOf="@+id/ima1"

            android:layout_toEndOf="@+id/ima1"
            android:layout_alignTop="@+id/ima1" />

        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:background="@drawable/ic_close_grey600_24dp"
            android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/delete"
            android:layout_alignTop="@+id/ima1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView

            app:srcCompat="@mipmap/feight"
            android:id="@+id/ima1"
            android:layout_weight="1"

            android:paddingTop="2dp"
            android:layout_height="80dp"

            android:layout_width="110dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:background="@drawable/ic_plus_circle_outline_grey600_24dp"
        android:id="@+id/add"

            android:layout_alignBottom="@+id/ima1"
            android:layout_toRightOf="@+id/items"
            android:layout_toEndOf="@+id/items" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_minus_circle_outline_grey600_24dp"
            android:id="@+id/remove"

            android:layout_alignBottom="@+id/items"
            android:layout_toRightOf="@+id/ima1"
            android:layout_toEndOf="@+id/ima1" />

    </RelativeLayout>
</ScrollView>


</RelativeLayout>
