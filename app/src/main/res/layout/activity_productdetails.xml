<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_productdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.cviac.nheart.nheartapp.activities.ProductdetailsActivity">


    <Button
        android:text="buy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="?attr/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button2" />

    <Button
        android:text="add to cart"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:background="?attr/colorPrimary"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollview"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/name"
                android:maxLines="1"
                android:textColor="#080200"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_below="@+id/image" />


            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                app:srcCompat="@drawable/heart"
                android:id="@+id/image"
                android:layout_centerHorizontal="true" />

            <RatingBar
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:numStars="5"
                android:stepSize="0.1"
                style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                android:backgroundTint="@android:color/holo_orange_light"

                android:id="@+id/ratingBar2"
                android:layout_below="@+id/new1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:clickable="true"
                tools:clickable="true" />

            <TextView
                android:text="desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:id="@+id/descr" />

            <TextView
                android:text="oldprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/old"
                android:textColor="?android:attr/textColorHint"
                android:textSize="15sp"
                android:textStyle="normal"
                android:capitalize="sentences"
                android:paddingLeft="10dp"
                android:layout_toRightOf="@+id/new1"
                android:layout_below="@+id/name" />

            <TextView
                android:text="price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new1"
                android:textColor="#080200"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textIsSelectable="false"
                android:layout_alignBaseline="@+id/old"
                android:layout_alignBottom="@+id/old"
                android:layout_toLeftOf="@+id/image"
                android:layout_toStartOf="@+id/image" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
